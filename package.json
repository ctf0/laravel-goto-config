{
    "name": "laravel-goto-config",
    "displayName": "Laravel Goto Config",
    "description": "Quick jump to config",
    "version": "0.4.1",
    "publisher": "ctf0",
    "engines": {
        "vscode": "^1.68.0"
    },
    "repository": "https://github.com/ctf0/laravel-goto-config",
    "icon": "images/logo.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "PHP",
        "Laravel",
        "goto",
        "file navigation"
    ],
    "activationEvents": [
        "onLanguage:php",
        "onLanguage:blade",
        "onUri",
        "onStartupFinished"
    ],
    "main": "./out/main",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Laravel Goto Config",
            "properties": {
                "laravelGotoConfig.folders": {
                    "type": "array",
                    "default": [
                        "config"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "description": "where to search for config files"
                },
                "laravelGotoConfig.methods": {
                    "type": "array",
                    "default": [
                        "config(",
                        "config([",
                        "Config::get(",
                        "Config::set(",
                        "giveConfig("
                    ],
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "description": "methods to search for"
                },
                "laravelGotoConfig.forceShowConfigLink": {
                    "type": "boolean",
                    "default": true,
                    "description": "force add a fake link to config key even if we cant find the file (so we can view its value)"
                },
                "laravelGotoConfig.phpCommand": {
                    "type": "string",
                    "default": "php artisan",
                    "description": "the php command to use for running tinker (any quotes needs to be escaped)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "watch": "npm run vscode:prepublish"
    },
    "devDependencies": {
        "@types/node": "^18.11.9",
        "@types/vscode": "^1.68.0",
        "esbuild": "^0.15.13",
        "tslint": "^6.1.3",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "escape-string-regexp": "^5.0.0",
        "execa": "^6.1.0",
        "fast-glob": "^3.2.12",
        "lodash.debounce": "^4.0.8"
    },
    "extensionDependencies": [
        "ctf0.php-array-symbols"
    ]
}
